{
  "compilerOptions": {
    "module": "NodeNext",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./*"]
    },
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}